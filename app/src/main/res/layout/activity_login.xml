<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/gradient_background"
    android:clipChildren="false">


    <ImageView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:src="@drawable/triangle_90_green_dark_mid"
        android:rotation="90"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/segi"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:src="@drawable/triangle_90_green_dark"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@color/yellow_green"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/regencie_light"
            android:text="Welcome to the Jungle!"
            android:textColor="@color/green_yellow_semi_dark"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regencie_light"
            app:errorEnabled="true"
            app:endIconMode="clear_text"
            android:hint="Username"
            app:startIconDrawable="@drawable/person_green_yellow">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true"
            android:hint="Password"
            app:startIconDrawable="@drawable/lock_green_yellow">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/green_yellow_semi_dark"
            android:fontFamily="@font/regencie_light"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/regencie_light"
            android:text="or"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnMoveRegister"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/yellow_green"
            android:fontFamily="@font/regencie_light"
            android:text="Register"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/green_yellow_semi_dark"/>

    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>